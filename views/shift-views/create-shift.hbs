<a class="go-back" href="/departments/{{department.name}}"><img src="/images/left-arrow.svg" class="go-back-btn"></a>
<section class="container">
  <div class="spread-stuff">
    <form class="form" action="/shifts/{{department.name}}/create" method="POST">
      <div>
        <label>EMPLOYEE:</label>
        <select name="assigned">
          {{#each users}}
            <option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
          {{/each}}
        </select>
      </div>
      <div class="schedule" id="schedule"></div>
      <button class="submit-button">CREATE SHIFTS</button>
    </form>
    <div id="shifts-list">
      <a href="#">FirstName LastName</a>
      <p>Monday, 9am-5pm</p>
      <p>Tuesday, 9am-5pm</p>
      <p>Wednesday, 5pm-1am</p>
      <form action="/shifts/{{department.name}}/delete/all" method="POST">
        <button>DELETE</button>
      </form>
      <br>

      {{#each shifts}}
      {{#if shifts.users}}
        {{!-- <a href="#"> --}}
          {{!-- sonething to show the user's name --}}
        {{!-- </a> --}}
        <p>{{this}}</p>
        {{!-- <form action="/shifts/{{department.name}}/delete/all" method="POST">
          <button>DELETE</button>
        </form> --}}
      {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="side-bar">
  </div>
</section>

<script src="/javascripts/jquery-3.4.1.min.js"></script>
<script src="/javascripts/schedule.js"></script>