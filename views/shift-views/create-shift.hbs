<section class="container">
  <a class="arrow-back" href="/users">‚Üê</a>
  <div class="board">
    <div class="board2">
      <div class="board3">
        <div>
          <h2>ADD SHIFT</h2>

          <form class="form" action="/shifts/create" method="POST">
            <label>EMPLOYEE:</label>
            <select name="assigned">
              {{#each users}}
              <option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
              {{/each}}
            </select>
            <label>SHIFT STARTING TIME:</label>
            {{date}}
            <input type="datetime-local" name="start">

            <label>SHIFT ENDING TIME:</label>
            <input type="datetime-local" name="end">

            <button>ADD</button>
          </form>
        </div>
        <div>
          <div id="shifts-list">
            <p>Test123</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>